# ==============================================
# RITZONE - ENVIRONMENT VARIABLES TEMPLATE
# ==============================================
# Copy this file to .env.local and fill in your actual values
# This file should be committed to version control as a template

# ==============================================
# NEXT.JS CONFIGURATION
# ==============================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=RitZone
NEXT_PUBLIC_APP_VERSION=1.0.0

# ==============================================
# APPLICATION URLs
# ==============================================
# CRITICAL: Update these for your deployment domain
# For local development: http://localhost:8001/api
# For production: https://ritzone.com/api
NEXT_PUBLIC_BACKEND_URL=http://localhost:8001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Legacy support (optional)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ==============================================
# GOOGLE SERVICES (Required for Maps functionality)
# ==============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_google_analytics_id_here

# ==============================================
# PAYMENT PROCESSING (Choose one or both)
# ==============================================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# PayPal
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# ==============================================
# DATABASE (Optional - for future backend)
# ==============================================
DATABASE_URL=your_database_connection_string_here

# ==============================================
# EMAIL SERVICE (Choose one)
# ==============================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@ritzone.com

# ==============================================
# FILE STORAGE (Choose one)
# ==============================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=ritzone-assets

# Cloudinary (Alternative)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==============================================
# AUTHENTICATION (Optional - for user accounts)
# ==============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# ==============================================
# SECURITY
# ==============================================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ==============================================
# MONITORING (Recommended for production)
# ==============================================
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# ==============================================
# ANALYTICS & MARKETING
# ==============================================
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your_facebook_pixel_id
NEXT_PUBLIC_GTM_ID=your_google_tag_manager_id

# ==============================================
# DEVELOPMENT OPTIONS
# ==============================================
DEBUG=false
NEXT_TELEMETRY_DISABLED=1