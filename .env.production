# ==============================================
# RITZONE - PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# Use these settings as reference for your Render deployment
# Set these variables in your Render dashboard

# ==============================================
# NEXT.JS CONFIGURATION
# ==============================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=RitZone
NEXT_PUBLIC_APP_VERSION=1.0.0

# ==============================================
# APPLICATION URLs (UPDATE THESE WITH YOUR ACTUAL DOMAIN)
# ==============================================
NEXT_PUBLIC_APP_URL=https://ritkart-frontend.onrender.com/
NEXT_PUBLIC_API_URL=https://ritkart-frontend.onrender.com/api

# ==============================================
# GOOGLE SERVICES (REQUIRED)
# ==============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_production_google_analytics_id

# ==============================================
# PAYMENT PROCESSING (PRODUCTION KEYS)
# ==============================================
# Stripe Production Keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_stripe_webhook_secret

# PayPal Production
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_production_paypal_client_id
PAYPAL_CLIENT_SECRET=your_production_paypal_client_secret

# ==============================================
# DATABASE (PRODUCTION)
# ==============================================
DATABASE_URL=your_production_database_connection_string

# ==============================================
# EMAIL SERVICE (PRODUCTION)
# ==============================================
SENDGRID_API_KEY=your_production_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ==============================================
# FILE STORAGE (PRODUCTION)
# ==============================================
# AWS S3 Production
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=ritzone-production-assets

# ==============================================
# AUTHENTICATION (PRODUCTION)
# ==============================================
NEXTAUTH_URL=https://your-ritkart-app.onrender.com
NEXTAUTH_SECRET=your_strong_production_nextauth_secret

# OAuth Production Credentials
GOOGLE_CLIENT_ID=your_production_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_production_google_oauth_client_secret

# ==============================================
# SECURITY (PRODUCTION)
# ==============================================
JWT_SECRET=your_strong_production_jwt_secret
ENCRYPTION_KEY=your_strong_32_character_production_key

# ==============================================
# MONITORING & ERROR TRACKING (ESSENTIAL FOR PRODUCTION)
# ==============================================
NEXT_PUBLIC_SENTRY_DSN=your_production_sentry_dsn

# ==============================================
# ANALYTICS & MARKETING (PRODUCTION)
# ==============================================
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your_production_facebook_pixel_id
NEXT_PUBLIC_GTM_ID=your_production_google_tag_manager_id

# ==============================================
# PRODUCTION OPTIMIZATIONS
# ==============================================
DEBUG=false
NEXT_TELEMETRY_DISABLED=1
NODE_OPTIONS=--max-old-space-size=4096

# ==============================================
# RENDER SPECIFIC SETTINGS
# ==============================================
PORT=3000
HOST=0.0.0.0