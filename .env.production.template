# ==============================================
# RITZONE - PRODUCTION ENVIRONMENT TEMPLATE
# ==============================================
# Copy these settings to your hosting platform's environment variables
# For ritzone.com deployment

# ==============================================
# NEXT.JS CONFIGURATION
# ==============================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=RitZone
NEXT_PUBLIC_APP_VERSION=1.0.0

# ==============================================
# APPLICATION URLs - PRODUCTION
# ==============================================
# âœ… CRITICAL: Update these for your ritzone.com domain
NEXT_PUBLIC_BACKEND_URL=https://ritzone.com/api
NEXT_PUBLIC_APP_URL=https://ritzone.com

# ==============================================
# SUPABASE CONFIGURATION (PRODUCTION)
# ==============================================
# Use your production Supabase project
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key

# ==============================================
# GOOGLE SERVICES (PRODUCTION)
# ==============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_production_google_analytics_id

# ==============================================
# PAYMENT PROCESSING (PRODUCTION)
# ==============================================
# Stripe Live Keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key

# PayPal Live
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_production_paypal_client_id

# ==============================================
# PRODUCTION OPTIMIZATIONS
# ==============================================
DEBUG=false
NEXT_TELEMETRY_DISABLED=1
NODE_OPTIONS=--max-old-space-size=4096

# ==============================================
# SECURITY (PRODUCTION)
# ==============================================
NEXTAUTH_URL=https://ritzone.com
NEXTAUTH_SECRET=your_strong_production_nextauth_secret
JWT_SECRET=your_strong_production_jwt_secret