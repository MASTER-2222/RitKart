# RitZone Backend Environment Variables
# Copy this file to .env and update the values

# ================================
# DATABASE CONFIGURATION
# ================================
MONGODB_URI=mongodb+srv://ritkart-admin:RakAJVBURLCJ0uHy@ritkart-cluster.yopyqig.mongodb.net/ritkart?retryWrites=true&w=majority&appName=ritkart-cluster
MONGODB_DATABASE=ritkart

# ================================
# JWT AUTHENTICATION
# ================================
JWT_SECRET=mySecretKey123456789012345678901234567890
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ================================
# FRONTEND INTEGRATION
# ================================
FRONTEND_URL=http://localhost:3000

# ================================
# GOOGLE OAUTH (Optional)
# ================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# ================================
# STRIPE PAYMENT (Optional)
# ================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ================================
# SERVER CONFIGURATION
# ================================
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# ================================
# LOGGING LEVEL
# ================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_RITZONE=DEBUG

# ================================
# CORS CONFIGURATION
# ================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://ritkart-frontend.onrender.com
CORS_ALLOW_CREDENTIALS=true

# ================================
# ADMIN CONFIGURATION
# ================================
ADMIN_DEFAULT_EMAIL=admin@ritzone.com
ADMIN_DEFAULT_PASSWORD=admin123

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
FILE_UPLOAD_DIR=uploads/
FILE_MAX_SIZE=10MB
FILE_MAX_REQUEST_SIZE=10MB

# ================================
# CACHE CONFIGURATION
# ================================
CACHE_TYPE=simple

# ================================
# ACTUATOR/MONITORING
# ================================
MANAGEMENT_ENDPOINTS_ENABLED=health,info,metrics,prometheus
MANAGEMENT_HEALTH_SHOW_DETAILS=when-authorized
